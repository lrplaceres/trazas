{% extends 'backend.html.twig' %}

{% block title %}Traza index
{% endblock %}

{% block article %}

	<table class="table table-striped table-hover widget">
		<thead class="table-primary">
			<th>Usuario</th>
			<th>Peticiones</th>
			<th>Tiempo</th>
			<th>MB</th>
			<th>URL</th>
			<th>Acciones</th>
		</thead>
		<tbody>

			{% for y in trazas %}
				<td>{{y['usuario']}}</td>
				<td>{{y['cant']}}</td>
				<td>{{y['milis']}}</td>
				<td>{{(y['bytes'] / 1000000)|number_format(2) }}</td>
				<td>{{y['url']}}</td>
				<td>
					<a href="{{ path('app_traza_mes_user_url', {'anho': anho,'mes': mes, 'user': y['usuario'], 'url':  y['url'] }) }}">
						<i class="bi bi-info-circle"></i>
					</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
	<table>

	{% endblock %}
